# Voluum API Access Keys
# Generate these in Voluum: Account Settings > Security > Access Keys
VOLUUM_ACCESS_ID=your-access-id-here
VOLUUM_ACCESS_KEY=your-access-key-here

# Supabase Configuration (for data storage & pattern recognition)
# Get these from your Supabase project: Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Data Retention (days)
DATA_RETENTION_DAYS=90

# SendGrid Email Configuration (for daily reports)
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-api-key-here
REPORT_EMAIL_FROM=reports@yourdomain.com
REPORT_EMAIL_TO=your@email.com

# Daily report time (UTC hour, 0-23)
DAILY_REPORT_HOUR=8
